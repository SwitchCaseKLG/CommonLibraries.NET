<div class="tooltip-wrapper@(TextStyle?" tooltip-wrapper-text":"")">
    <span>@Text</span>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Text { get; set; } = string.Empty;
    [Parameter] public bool TextStyle { get; set; } = false;
}